<div class="m-5">
  <h1 class="text-center">Our Guides</h1>
</div>
<div class="container">
  <div class="row">
      <% @profiles.each do |profile| %>
      <div class="col-sm guide">
        <%= profile.photo.key %>
        <%# display profile image %>
        <%= profile.name %>
        <br>
        <%= profile.address %>
        <%# location instead of adress %>
        <br>
        <%= link_to 'See Guide', profile_path(profile), class: "btn btn-accent"%>
    </div>
  <% end %>
    </div>
  </div>
</div>
