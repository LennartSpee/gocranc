<h1 class="text-center m-5">Our Guides</h1>

<div class="container">
  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-4 guide">
        <%= cl_image_tag profile.photo.key %>
        <%= profile.name %>
        <%= link_to 'See Guide', profile_path(profile), class: "btn btn-accent" %>
      </div>
    <% end %>
  </div>
</div>
