<%= simple_form_for @profile do |f| %>
  <%= f.input :name %>
  <%= f.input :phone %>
  <%= f.input :age %>
  <%= f.input :address %>
  <%= f.input :bio %>
  <%= f.input :sports, collection: ["Surf", "Hiking", "Snowboard", "Windsurf", "Ski"], as: :check_boxes, input_html: { class: "toggle" }  %>
  <%= f.input :user_type, :collection => %w[User Guide] %>
  <%= f.button :submit, 'Save', class: "btn btn-primary" %>
 <% end %>
