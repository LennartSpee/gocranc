<div class="m-5">
<h1>My profile <%= link_to 'Edit', edit_profile_path, class: "btn btn-accent" %> </h1>
  <div class="row p-3">
    <div class="col">
    <% if @profile.photo.key %>
    <%= cl_image_tag @profile.photo.key, height: 250, width: 250, crop: :fill %>
    <% else %>
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" width="250" height="250" />
    <% end %>
    </div>
    <div class="col-8" style="overflow-wrap: break-word;">
      <h2 style="border-bottom: 1px solid white;">Name: <%= @profile.name %></h2>
      <p style="border-bottom: 1px solid white;">Age: <%= @profile.age %></p>
      <p style="border-bottom: 1px solid white;"><%= @profile.bio %></p>
      <p style="border-bottom: 1px solid white;">Interested in sports: <%= @profile.sports %></p>
      <p style="border-bottom: 1px solid white;">Located: <%= @profile.address %></p>
      <p style="border-bottom: 1px solid white;">Phone: <%= @profile.phone %></p>
      <p style="border-bottom: 1px solid white;"><%= @profile.user_type %></p>
    </div>
  </div>
</div>
