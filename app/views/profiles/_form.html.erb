<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-sm-8">
      <%# <div class="form-profile"> %>
        <h2>Edit your profile</h2>
        <%= simple_form_for(@profile) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :photo, as: :file %>
            <%= f.input :name, required: false, autofocus: true, class:"transp-input" %>
            <%= f.input :phone, required: false, autofocus: true, class:"transp-input" %>
            <%= f.input :age, required: false, autofocus: true, class:"transp-input" %>
            <%= f.input :bio, required: false, class:"transp-input" %>
            <div class="sports-flex">
            <%= f.input :address, required: false, class:"transp-input" %>
            <%= f.input :social_medias, required: false, collection: ["Instagram", "Facebook", "Twitter", "Linkedin"], include_hidden:false, as: :check_boxes, input_html: { class: "checkbox"}, class:"transp-input"%>
            <%= f.input :social_medias, required: false, class:"transp-input" %>

            <%= f.input :sports, required: false, collection: ["Surf", "Hiking", "Snowboard", "Windsurf", "Ski"], include_hidden:false, as: :check_boxes, input_html: { class: "checkbox"}, class:"transp-input"%>
            <%= f.input :favorite_places, required: false, autofocus: true, class:"transp-input" %>
            <%= f.input :user_type, required: false, collection: ["User", "Guide"], include_hidden:false, input_html: {class:"transp-input"} %>
            </div>
            <%= f.button :submit, "Submit", class: "btn btn-accent" %>
          </div>
        <% end %>
      <%# </div> %>
    </div>
  </div>
</div>
