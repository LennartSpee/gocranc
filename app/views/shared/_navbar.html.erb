<div class="navbar navbar-expand-sm navbar-dark navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png", alt: "getcrank.io", width: 200 %>
    <% end %>

    <button class="navbar-toggler search" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div>
      <%= form_tag offers_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "find your adventure"
        %>
        <%= submit_tag "Search", class: "btn btn-search" %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <% unless current_user.profile %>
        <li class="nav-item active">
            <%= link_to "Add your profile", new_profile_path, class: "btn btn-accent" %>
          </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to "About", "/about", class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Guides", profiles_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "FAQs", "/faq", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Offers", offers_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle ml-20px", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if current_user.profile.present? %>
              <%= link_to "My Profile", show_profile_path(current_user.profile), class: "dropdown-item" %>
              <% end %>
              <%= link_to 'Create new offer', new_offer_path, class: "dropdown-item" %>
              <%= link_to 'See my offers', my_offers_path, class: "dropdown-item" %>
              <%= link_to "See bookings", bookings_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login / signup", new_user_session_path, class: "btn btn-accent" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
