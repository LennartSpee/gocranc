<div class="row mt-5 mb-5 cards content" id="sports">
  <h2>Sports you can connect with locals</h2>
  <% @sports.each do |sport| %>
      <div class="card-category" style="background-image: url('<%= sport.photo.key.present? ? cl_image_path(sport.photo.key) : '' %>')">
        <%= sport.name %>
        <%= link_to 'Click here', sports_offers_path(query: sport.name) %>
      </div>
  <% end %>
</div>

