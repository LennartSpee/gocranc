<div class="container">
<div class="row justify-content-center">
<div class="col-md-4 col-sm-8">
<div class="form-login">
<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" class="login-icons">
    <i class="fa fa-envelope icon"></i>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class:"transparent-input" } %>
  </div>
  <div class="form-inputs" class = "login-icons">
    <i class="fa fa-key icon"></i>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class:"transparent-input", class: "form-control" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-accent" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "btn btn-accent" %>
      </div>
    </div>
  </div>
</div>
