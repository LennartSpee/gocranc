  <div class="form" data-controller="datepicker">
    <%= simple_form_for [@offer, @booking] do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}, html5: true %>
      <%= f.input :end_date,  as: :string, html5: true, required: false, input_html: {class: "datepicker"} %>
      <%= f.submit "Submit Booking", class: "btn btn-accent" %>
    <% end %>
  </div>
