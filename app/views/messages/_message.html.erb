<div id="message-<%= message.id %>" class="text-<%= message.user == current_user ? 'end' : 'start' %>">
  <small>
    <strong><%= message.user.email %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small><br>
  <p class="mt-2 fs-6 badge px-3 py-2 rounded-pill bg-<%= message.user == current_user ? 'primary' : 'light text-dark' %>">
    <%= message.content %>
  </p>
</div>
